<% if( success.length ){ %>
<div
  class="alert alert-success alert-dismissible fade show text-center"
  ,
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if(deleted.length ){ %>
<div class="alert alert-danger alert-dismissible fade show" , role="alert">
  <%= deleted%>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> %> <% if(error.length ){ %>
<div class="alert alert-danger alert-dismissible fade show" , role="alert">
  <%= error%>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
